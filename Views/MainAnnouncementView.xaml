<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CORCEGuideApp.Views.MainAnnouncementView"
             xmlns:models="clr-namespace:CORCEGuideApp.Models"
             Title="MainAnnouncementView">
    <ScrollView>
        <VerticalStackLayout>
            <Label 
            Text="Avaible Announcements"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <CollectionView
            ItemsSource="{Binding Announcements}"
            SelectionMode="Single"
            SelectedItem="{Binding SelectedAnnouncement}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                        Padding="10"
                        Margin="5">
                            <VerticalStackLayout>
                                <Label 
                                Text="{Binding Title}"
                                FontAttributes="Bold"/>
                                
                                    <Label 
                                        Text="{Binding Content}"
                                        FontAttributes="Bold"/>
                                    <Image Source="{Binding ImagePath}"
                                       HeightRequest="200"
                                       WidthRequest="200"
                                       HorizontalOptions="End"/>
                                    
                                        <Label 
                                        Text="{Binding Category.Name}"
                                        FontAttributes="Bold"/>

                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button
            Text="Add New Announcement"
            VerticalOptions="End"
            Margin="0, 10, 0, 0"
            Clicked="OnAddNewAnnouncement"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>