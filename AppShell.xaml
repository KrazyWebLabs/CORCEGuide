<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CORCEGuideApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CORCEGuideApp"
    xmlns:views="clr-namespace:CORCEGuideApp.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="CORCEGuideApp">

    <ShellContent
        Title="Categories"
        ContentTemplate="{DataTemplate views:MainCategoryView}"
        Route="CategoryView" />

    <ShellContent
        Title="Roles"
        ContentTemplate="{DataTemplate views:MainRoleView}"
        Route="RoleView" />

    <ShellContent
        Title="Announcements"
        ContentTemplate="{DataTemplate views:MainAnnouncementView}"
        Route="AnnouncementView" />

    <ShellContent
        Title="Users"
        ContentTemplate="{DataTemplate views:MainUserView}"
        Route="UserView" />

    <ShellContent
        Title="Favorites"
        ContentTemplate="{DataTemplate views:MainFavoriteView}"
        Route="FavoriteView" />
</Shell>
